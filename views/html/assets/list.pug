doctype html 
html 
    head 
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="../../css/style.css")
    body 
        //- header
        header 
            .container 
                .header.flex-row
                    form.search-form.flex-column#searchPokemon
                        input#searchInput(type="text" placeholder="Search here..." autocomplete="off" required)
                    ul.flex-row
                        a(href="/").flex-row
                            img(src="../../images/home-icon.png")
                            span home
                        a(href="/list?page=1").flex-row
                            img(src="../../images/play-icon.png")
                            span pokemons
        //- main
        main 
            .container 
                //- pokemon list
                .list 
                    ul.list-ul
                        - const listArray = list;
                        each pokemon, i in listArray 
                            li.list-li.flex-row
                                a(href=`/pokemon/${pokemon}`).flex-column 
                                    span #{pokemon}
                                    img(src=images[i] alt=pokemon)
                //- pagination
                .pagination.flex-row
                    - let previous = Number(current_page) - 1;
                    - let next = Number(current_page) + 1;
                    a(href=`/list?page=1`) first page
                    a(href=`/list?page=${previous}`) #{previous}
                    a(href=`/list?page=${current_page}`).active #{current_page} 
                    a(href=`/list?page=${next}`) #{next}
                    a(href=`/list?page=${last_page}`) last page
    script(type="module" src="../../script.js")